<Window x:Class="Reforia.RpcTestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Reforia RPC Test Tool" Height="700" Width="1200"
        Loaded="MainWindow_OnLoaded">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Host:"/>
                <TextBox Grid.Column="1" x:Name="HostTextBox" Margin="6,0,0,0"
                         VerticalAlignment="Center" Text="localhost"/>

                <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="Port:"/>
                <TextBox Grid.Column="4" x:Name="PortTextBox" Margin="6,0,0,0"
                         VerticalAlignment="Center" Text="5727"/>

                <TextBlock Grid.Column="6" VerticalAlignment="Center" Text="Scheme:"/>
                <ComboBox Grid.Column="7" x:Name="SchemeComboBox" Margin="6,0,0,0"
                          VerticalAlignment="Center" SelectedIndex="0">
                    <ComboBoxItem Content="http"/>
                    <ComboBoxItem Content="https"/>
                </ComboBox>

                <TextBlock Grid.Column="9" VerticalAlignment="Center" Text="Hub path:"/>
                <TextBox Grid.Column="10" x:Name="HubPathTextBox" Margin="6,0,0,0"
                         VerticalAlignment="Center" Text="/hub"/>

                <Button Grid.Column="12" x:Name="ConnectButton" Margin="6,0,0,0"
                        Content="Connect" Click="ConnectButton_OnClick"/>
                <TextBlock Grid.Column="13" x:Name="StatusTextBlock" Margin="10,0,0,0"
                           VerticalAlignment="Center" Text="Disconnected"/>
            </Grid>
        </Border>

        <!-- Call -->
        <Border Grid.Row="2" Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="FunctionName:"/>
                <TextBox Grid.Column="1" x:Name="FunctionNameTextBox" Margin="6,0,0,0"
                         VerticalAlignment="Center" Text="GetTestFunction"/>
                <Button Grid.Column="3" Content="Body Generator" Click="BodyGeneratorButton_OnClick"/>
                <TextBlock Grid.Column="5" VerticalAlignment="Center" Text="RequestId:"/>
                <TextBox Grid.Column="6" x:Name="RequestIdTextBox" Margin="6,0,0,0"
                         VerticalAlignment="Center" IsReadOnly="True"/>

                <Button Grid.Column="8" x:Name="NewRequestIdButton" Margin="6,0,0,0"
                        Content="Refresh request Id" Click="NewRequestIdButton_OnClick"/>

                <Button Grid.Column="9" x:Name="SendButton" Margin="6,0,0,0"
                        Content="Send" Click="SendButton_OnClick" IsEnabled="False"/>

                <Button Grid.Column="10" x:Name="ClearButton" Margin="6,0,0,0"
                        Content="Clear" Click="ClearButton_OnClick"/>
            </Grid>
        </Border>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Body (JSON string):" Margin="0,0,0,6"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="WebResponse / Log:" Margin="0,0,0,6"/>

            <TextBox Grid.Row="1" Grid.Column="0" x:Name="BodyTextBox"
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas" TextWrapping="NoWrap"
                     Text="{Binding ElementName=BodyTextBox, Path=Text}">
            </TextBox>

            <TextBox Grid.Row="1" Grid.Column="2" x:Name="ResponseTextBox"
                     IsReadOnly="True"
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas" TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</Window>